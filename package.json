{
  "name": "video-squisher",
  "productName": "Video Squisher",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rm -rf dist && rm -rf out",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite --force",
    "watch:renderer": "vite build --watch",
    "dev": "concurrently -k -n MAIN,RENDERER,ELECTRON -c blue,cyan,green \"yarn watch:main\" \"yarn watch:renderer\" \"wait-on dist/renderer/index.html && electron .\"",
    "build": "tsc -p tsconfig.main.json && vite build",
    "make": "yarn build && electron-forge make"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "ffmpeg-static": "^5.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-dmg": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/ffmpeg-static": "^5.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  }
}
